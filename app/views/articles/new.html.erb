<h2>New Article</h2>
<%= form_for(@article, :html => { :class => 'input' }) do |f| %>
  <%= f.label :item, "Title", :class => 'input__label' %>
  <%= f.text_field :item, :placeholder => "enter article name", required: true , :class => 'input__title' %>
  <%= f.label :author, "Author", :class => 'input__label' %>
  <%= f.text_area :author, :placeholder => "enter author name", required: true, :class => 'input__title' %>
  <%= f.label :cover_image, "Cover Image", :class => 'input__label' %>
  <%= f.text_area :cover_image, :placeholder => "enter image url", required: true, :class => 'input__title' %>
  <%= f.label :blurb, "Blurb", :class => 'input__label' %>
  <%= f.text_area :blurb, :placeholder => "enter blurb", :class => 'input__content' %>
  <%= f.label :content, "Content", :class => 'input__label' %>
  <%= f.text_area :content, :placeholder => "enter article name", required: true, :class => 'input__content' %>
  <%= f.label :order, "Order", :class => 'input__label' %>
  <%= f.text_area :order, :placeholder => "enter article order", required: true, :class => 'input__title' %>
  <%= f.submit %>
<% end %>
<%= link_to 'Back', :root %>
